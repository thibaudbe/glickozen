// All
$vendors = webkit, moz, ms, o

prefix(prop, arg...)
  for i in $vendors
    {'-' + i + '-' + prop} arg
  {prop} arg


unselectable()
  cursor default
  prefix user-select, none


placeholder()
  &::-webkit-input-placeholder
    color arguments

  &:-moz-placeholder
    color arguments

  &::-moz-placeholder
    color arguments
    opacity 1

  &:-ms-input-placeholder
    color arguments


percentage(n1, n2)
  unit((n1/n2)*100, '%')


valign()
  display: inline-block
  vertical-align: arguments


clearfix()
  content ''
  width 100%
  display inline-block

truncate(n)
  max-width unit(n, 'px')
  overflow hidden
  text-overflow ellipsis
  white-space nowrap


/**
 * Gridify - don't forget {'\n'} in jsx
 */
row()
  text-align justify
  text-justify distribute
  font-size 0
  position relative
  &::after
    clearfix()

col()
  position relative
  *display inline
  *zoom 1
  & > *
    text-align left
