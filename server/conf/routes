# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         controllers.Application.main

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

GET         /api/login                controllers.Application.auth
POST        /api/login                controllers.Application.login

POST        /api/games                controllers.Games.addGame
GET         /api/games                controllers.Games.getGames(player: String)
GET         /api/games/pending        controllers.Games.getPendingGames(player: String)
PUT         /api/games/confirm        controllers.Games.confirmGame

GET         /api/ratings              controllers.Games.getRankedPlayers(sport: String)

GET         /caca                     controllers.Application.unauth