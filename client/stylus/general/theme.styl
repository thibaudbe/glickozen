// Charte graphique

font-url(file)
  return '../fonts/' + file

webfont(family, file, weight = 'normal', sty = 'normal')
  @font-face
    font-family family
    font-weight weight
    font-style sty
    src url(font-url(file + '.eot'))
    src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
      url(font-url(file + '.woff2')) format('woff2'),
      url(font-url(file + '.woff')) format('woff'),
      url(font-url(file + '.ttf')) format('truetype'),
      url(font-url(file + '.svg#'+ family)) format('svg')

webfont('dinregular', 'din-regular-webfont', normal, normal)
webfont('dinregular', 'din-medium-webfont', bold, normal)

::selection 
  background-color lighten($color1, 90%)

html, body
  overflow hidden

body
  color $color0
  font-family $font1
  font-size 1em
  background-color #EFF6F9


// General
.btn
  background: $color1
  padding 13px 26px 14px
  font-weight bold
  color #fff
  font-size .8rem
  display inline-block
  outline 0
  prefix border-radius 4px
  prefix transition, box-shadow 140ms, background-color 140ms, color 140ms
  prefix user-select, none
  @media only screen and (max-width: $mobile)
    width 100%
    margin-bottom 20px

  &:hover,
  &:focus
    background-color darken($color1, 20%)
    color #fff
  
  &:focus
    prefix box-shadow 0 0 3px 1px rgba(93, 18, 67, 0.3)
  
  &:active
    background-color tint($color1, 20%)
    border-color tint($color1, 20%)
    color #fff

  &.disabled
    &, &:hover, &:active, &:focus
      background $color1
      opacity 0.6

  &.btn-mini
    background-color transparent
    color $color1
    padding 2px
    padding 5px 5px
    font-size 1.2rem

  &.secondary
    padding 14px 25px
    border 2px solid $color1
    background-color transparent
    color $color1
    
  &.btn-link
    padding 15px 25px
    background-color transparent
    color #ADADAD
    &:hover
      color $color0

.card {
  background-color: #fff;
  padding: 20px;
  overflow-x: hidden;
  overflow-y: scroll;
  position: absolute;
  top: 0; right: 0; bottom: 0; left: 0;
  prefix(border-radius, 4px);  
}


// form
.field {
  margin-bottom: 15px;
}

label {
  display: inline-block;
  margin-bottom: 10px;
}

input {
  border: 1px solid #ddd;
  border-radius: 2px;
  padding: 10px;
  display: block;
  width: 100%;
  font-size: 1rem;
}
